 	<!-- selectBoardCount -->
 	<select id="selectBoardCount" resultType="int">
 		SELECT COUNT(*) FROM BOARD
 			WHERE 1 = 1
 			<if test="searchCondition == 'TITLE'">
 			AND TITLE LIKE CONCAT_WS('%', #{searchKeyword}, '%')
 		</if>
 		<if test="searchCondition == 'CONTENT'">
 			AND TITLE LIKE CONCAT_WS('%', #{searchKeyword}, '%')
 		</if>
 	</select>
 	
	<!-- MySQL -->
 	<select id="getBoardList" resultMap="boardResult">					
 		SELECT * FROM BOARD 
 		WHERE 1=1
 		<if test="board.searchCondition == 'TITLE'">
 			AND TITLE LIKE CONCAT_WS('%', #{board.searchKeyword}, '%')
 		</if>
 		<if test="board.searchCondition == 'CONTENT'">
 			AND TITLE LIKE CONCAT_WS('%', #{board.searchKeyword}, '%')
 		</if>
 			LIMIT #{criteria.amount} OFFSET #{criteria.startNum}
 	</select>
 	
 	<select id="getBoardSeq" resultType="int">
 		SELECT IFNULL(MAX(SEQ),0) + 1 
 			FROM BOARD A
 	</select>
 	
 	<insert id="insertBoardFileList" parameterType="com.springbook.vo.BoardFileVO">
		INSERT INTO BOARD_FILE (
									SEQ,
									F_SEQ,
									ORIGINAL_FILE_NAME,
									FILE_PATH,
									FILE_SIZE
								)
						VALUES (
									#{seq},
									(
										SELECT IFNULL(MAX(F_SEQ), 0) + 1
											FROM BOARD_FILE B
										WHERE SEQ = #{seq} 
									),
									#{originalFileName},
									#{filePath},
									#{fileSize}
								)
	</insert>
	
	<select id="getBoardFileList" parameterType="int" resultType="com.springbook.vo.BoardFileVO">
		SELECT * FROM BOARD_FILE
			WHERE SEQ = #{seq}
	</select>
	
	<delete id="deleteFile" parameterType="com.springbook.vo.BoardFileVO">
		DELETE FROM BOARD_FILE
			WHERE SEQ = #{seq}
			  AND F_SEQ = #{fSeq}
	</delete>
	
	<delete id="deleteFileList" parameterType="int">
		DELETE FROM BOARD_FILE
			WHERE SEQ = #{seq}
	</delete>
 	
